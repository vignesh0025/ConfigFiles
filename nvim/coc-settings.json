{
    "python.jediEnabled": true,
    // "python.pythonPath": "$VIRTUAL_ENV/bin/python",
    //  This is done inside .vimrc to use an environment variable
    "clangd.checkUpdates": true,
    "clangd.semanticHighlighting": true,
    "clangd.path": "/home/vignesh/.config/coc/extensions/coc-clangd-data/install/11.0.0/clangd_11.0.0/bin/clangd",
    "explorer.keyMappings.global": {
        "v": "open:vsplit"
    },
    "explorer.icon.enableNerdfont":true,
    "explorer.position": "right",
    "snippets.enableStatusItem": true,
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "vim-snippets/UltiSnips"
    ],
    "coc.source.tmuxcomplete.priority":11,
    "coc.source.ultisnips.shortcut": "UltiSnips",
    "coc.source.around.shortcut": "Around",
    "coc.source.buffer.shortcut": "Buffer",
    "coc.source.file.shortcut": "File",
    "snippets.shortcut": "Snippets",
    "python.jediShortcut": "Jedi",
    "suggest.echodocSupport": true,
    "diagnostic.displayByAle": true,
    "languageserver": {
        "lua": {
            "command": "~/Data/lua-language-server/bin/Linux/lua-language-server",
            "args": ["-E", "-e", "LANG=en", "/home/vignesh/Data/lua-language-server/main.lua"],
            "filetypes": ["lua"],
            "rootPatterns": [".git/"],
            "settings": {
                "Lua": {
                    "workspace": {
                        "library": {
                            "/home/vignesh/Data/nvim-plugin-lua/nvim-lua-stdlib": true
                        },
                        "maxPreload": 2000,
                        "preloadFileSize": 1000
                    },
                    "runtime": {
                        "version": "Lua 5.3"
                    },
                    "diagnostics": {
                        "enable": true,
                        "globals": ["hs", "vim", "it", "describe", "before_each", "after_each"],
                        "disable": ["lowercase-global"]
                    },
                    "completion": {
                        "keywordSnippet": "Disable"
                    }
                }
            }
        }
    }
}
